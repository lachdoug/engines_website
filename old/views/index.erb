<body>
  <div id="page_loading_spinner">
    <svg width="100" height="100">
      <g transform="scale(0.33333)">
        <path d="
          M 150,300
          L 280,225
          L 280,75
          L 150,0
          L 20,75
          L 20,225
          L 150,300
          M 40,150
          A 110,110 0 1,0 260,150
          A 110,110 0 1,0 40,150
          Z"
          style="fill:#48D;stroke-width:0" fill-rule="evenodd">
          <animateTransform attributeName="transform"
                                    type="rotate"
                                    from="0 150 150"
                                    to="360 150 150"
                                    begin="0s" dur="3s"
                                    repeatCount="indefinite"/>
        </path>
      </g>
    </svg>
  </div>

  <div id="page_content" style="display: none;">
    <%= erb :index_content, layout: false %>
  </div>

</body>
